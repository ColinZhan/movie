doctype
html
	head
	meta(charset="utf-8")
	meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
	title= title
	include ../includes/head
body
	.container
		.row
			.col-md-5.center-block(style="float:none;")
				.user-form
					h1.text-primary.text-center.text-uppercase= title
					hr
					form.form-horizontal(method="POST", action="/user/signin")
						.form-group
							label(for="signupName").col-sm-2.control-label 用户
							.col-sm-10
								input(name="user[name]", type="text",placeholder="请输入用户名", required, autofocus)#signupName.form-control
						.form-group
							label(for="signupPassword").col-sm-2.control-label 密码
							.col-sm-10
								input(name="user[password]", type="password", placeholder="请输入密码", required)#signupPassword.form-control
						.form-group
							.col-sm-offset-2.col-sm-10
								button.btn.btn-default(type="submit") 登录
